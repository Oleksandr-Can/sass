<div class='page'>
  {{#with header}}
    <header class='header'>     
      
        <div class='header__content'>
          <div class='header__block'>
            <img
              src='/svg/apple.svg'
              alt='Aplle'
              class='header__icon'
              
            />
            <nav class='header__block'>
              {{#each links}}
                <a
                  href='{{url}}'
                  class='header__link'
                >{{text}}</a>
              {{/each}}
            </nav>
          </div>
          <div class='header__block'>

            <img
              src='/svg/search.svg'
              alt='Search'
              class='header__icon'           
            />

            <img
              src='/svg/locker.svg'
              alt='Profile'
              class='header__icon'            
            />
          </div>
        </div>
      
    </header>
        
        {{#with ad}}
        <div class="ad">
        <div class=' header__content ad__content '>
          <div class='header__block ad__block '>
            <p class="ad__title">{{title}}</p>            
          </div>
          <div class='header__block ad__block '>
            {{#with link}}
             <a href="{{url}}" class="ad__link">{{text}}</a>
            {{/with}}
            
          </div>      
        </div>
        </div>
        {{/with}}
    
  {{/with}}

